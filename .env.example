# ===========================================
# Etsy ERP - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ---- App ----
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:5000
PORT=5000

# ---- MySQL ----
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=etsy_erp
MYSQL_USER=etsy_erp
MYSQL_PASSWORD=change_me_strong_password
MYSQL_ROOT_PASSWORD=change_me_root_password

# ---- Redis ----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ---- JWT ----
JWT_SECRET=change_me_random_secret_at_least_32_chars
JWT_REFRESH_SECRET=change_me_another_random_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ---- Google OAuth ----
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ---- Etsy OAuth (API v3) ----
ETSY_API_KEY=iutbxyhfag041rfvy2o7yl9t
ETSY_REDIRECT_URI=http://localhost:5000/api/etsy/callback
ETSY_SCOPES=shops_r listings_r listings_w transactions_r transactions_w billing_r profile_r email_r

# ---- Token Encryption (AES-256-GCM) ----
TOKEN_ENCRYPTION_KEY=change_me_32_byte_hex_key_64_chars

# ---- Telegram Notification ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_DEFAULT_CHAT_ID=

# ---- Email (SMTP) ----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# ---- Invoice / Matbao ----
MATBAO_API_URL=
MATBAO_API_KEY=
MATBAO_API_SECRET=

# ---- Exchange Rate (USD to VND) ----
DEFAULT_USD_VND_RATE=25000

# ---- Frontend (Vite) ----
# Etsy ToS ยง1: prominently displayed contact email for app users
VITE_CONTACT_EMAIL=your@email.com
